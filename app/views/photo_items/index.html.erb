<div class="main">
	<div class="centered wrapper">
		<h1>Flickr Photo Stream</h1>
		<% unless @photostream.blank? then %>
			<h2><%=@photostream.title%></h2>

				<div class="grid masonry">
				<% @items.each do |item| %>
					<div class="grid-item item">
						

						<div class="image_with_link"><%= render inline: item.image_with_link%></div>
						<div class="inner-item">
							<div class="byline"><%=link_to item.title, item.link%> by <%=link_to item.short_author, item.author_link %></div>
							<div class="description_text"><%= render inline: item.description_text%></div>
							<% unless item.tags_with_links.blank? %>
								<div class="tags">tags: <%= render inline: item.tags_with_links%></div>
							<% end %>
						
						</div>
					</div>
				<% end %>
				</div>

		<% else %>
			<h2>Unable to load photostream</h2>
		<% end %>
	</div>
</div>